# OFCA Environment Configuration

# Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk-or-...
GROQ_API_KEY=gsk-...
GROK_API_KEY=grok-...
MISTRAL_API_KEY=...

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60000

# Model Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_TOP_P=0.9

# UI Configuration
ENABLE_POWERLINE=true
ENABLE_GRADIENTS=true
USE_NERD_FONTS=true

# Logging
LOG_LEVEL=info
LOG_FILE=ofca.log

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CACHE_SIZE=100

# Security
ENCRYPT_MESSAGES=false
ENABLE_IP_RESTRICTION=false
ALLOWED_IPS=127.0.0.1

# Demo Mode
DEMO_MODE=false
DEMO_DELAY_MS=1000
